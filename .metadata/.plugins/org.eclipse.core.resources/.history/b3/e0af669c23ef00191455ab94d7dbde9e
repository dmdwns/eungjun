package com.mystudy.ex02_overriding;

public class TypeTest {

	public static void main(String[] args) {
		Animal an = new Animal();
		Cat cat = new Cat();
        Dog dog = new Dog();
		Pig pig = new Pig();
		an.eat();
		an.sleep();
		cat.sound();
        dog.sound();
        
        
        System.out.println("------ sound() 호출 ---------");
        sound(an);
        sound(cat); 
        sound(dog);
		sound(pig);
		
		System.out.println("===========================");
		pig.name = "돼지";
		
	}
	
		
     private static void sound(Animal animal) {
    	 animal.sound();
        	 
     }
     
     
	
	
	
	
	
	
	
	
	
