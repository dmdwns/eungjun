	public void SelectConcert() {
        boolean run = true;
        while(run) {
        	try {
                Scanner scan = new Scanner(System.in);
                System.out.println(">>>관람하실 콘서트를 선택해주세요");
                System.out.println("1.BTS  2.내일은 미스트롯  3.악동뮤지션  4.슈퍼밴드 5.싸이연말콘서트");
                concert_num = Integer.parseInt(scan.nextLine());
        
		        switch(concert_num) {
		        
			        case 1:
			                selectOne(1);
			                run = false;
			                break;
			        case 2:
			                selectOne(2);
			                run = false;
			                break;
			        case 3:
			                selectOne(3);
			                run = false;
			                break;
			        case 4:
			                selectOne(4);
			                run = false;
			                break;
			        case 5:
			                selectOne(5);
			                run = false;
			                break;
			        default :
			                System.out.println("1-5까지의 숫자만 입력해주세요.");
		        }
        
            }
        	catch(Exception e) {
	                System.out.println("숫자만 입력해주세요.");
	        }
        }
	}
